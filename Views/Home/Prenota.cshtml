@model Prenotazione;
@{
    ViewData["Title"] = "Prenota";
}

<div class="text-center">
    <h1 class="display-4">Prenota</h1>

    <form class="m-2" method="post" asp-action="Conferma">
        <div class="form_nome">
            <label asp-for="Nome">Nome:</label>
            <input required asp-for="Nome" class="form-control">
        </div>

        <div class="form_cognome">
            <label asp-for="Cognome">Cognome:</label>
            <input required asp-for="Cognome" class="form-control">
        </div>

        <div class="form_email">
            <label asp-for="Email">La tua email:</label>
            <input required asp-for="Email" class="form-control" type="email">
        </div>

        <div class="form_data">
            <label asp-for="DataDiNascita">Data di nascita:</label>
            <input required asp-for="DataDiNascita" class="form-control" type="date">
        </div>

        <div class="form_sesso">
            <label asp-for="_Sesso">Sesso:</label>
            <br>
            <input required type="radio" asp-for="_Sesso" value="Maschio" id="M">
            <label for="M">M</label><br>
            <input required type="radio" asp-for="_Sesso" value="Femmina" id="F">
            <label for="F">F</label><br>
            <input required type="radio" asp-for="_Sesso" value="Non specificato" id="N">
            <label for="N">Non specificare</label><br>
        </div>

        <div class="form_ruolo">
            <label for="_Ruolo">Ruolo:</label>
            <select id="ruolo" name="ruolo">
                <option value="" selected>---</option>
                <option value="Docente">Docente</option>
                <option value="Studente">Studente</option>
                <option value="Genitore">Genitore</option>
            </select>
        </div>
            <button type="Submit" class="btn btn-primary w-25 mb-2">Submit</button>
    </form>
</div>